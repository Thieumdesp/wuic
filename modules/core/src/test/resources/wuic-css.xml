<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE wuic SYSTEM 'http://capgemini.com/wuic/wuic.dtd'>
<wuic>
    <resource-factory-builders>
        <resource-factory-builder id="imgSourceRootProvider" class="ClasspathNutDaoBuilder">
            <properties>
                <property key="c.g.wuic.dao.basePath">/</property>
                <property key="c.g.wuic.dao.regex">true</property>
            </properties>
        </resource-factory-builder>
        <resource-factory-builder id="cssSourceRootProvider" class="ClasspathNutDaoBuilder">
            <properties>
                <property key="c.g.wuic.dao.basePath">/css</property>
            </properties>
        </resource-factory-builder>
    </resource-factory-builders>
    <groups>
        <group id="css-image" configuration="sprite-image-png" default-builder="imgSourceRootProvider">
            <file>images/.*.png</file>
        </group>
        <group id="css-scripts" configuration="yuicompressor-css" default-builder="cssSourceRootProvider">
            <file>jquery-ui.css</file>
            <file>jquery.ui.all.css</file>
        </group>
    </groups>
    <configurations>
        <configuration id="sprite-image-png" type="SPRITE">
            <compress>true</compress>
            <aggregate>true</aggregate>
            <charset>UTF-8</charset>
            <sprite-provider>com.github.wuic.engine.impl.embedded.CGCssSpriteProvider</sprite-provider>
        </configuration>
        <configuration id="yuicompressor-css" type="CSS">
            <aggregate>true</aggregate>
            <charset>UTF-8</charset>
            <compress>true</compress>
            <yuiLineBreakPos>-1</yuiLineBreakPos>
        </configuration>
    </configurations>
</wuic>